{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "skipLibCheck": true,
        "rootDirs": [
          "lib"
        ],
        "typeRoots": [
          "./node_modules/@types",
          "./types"
        ],
        "outDir": "./dist",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "test/**/*",
        "dist/**/*"
    ],
}
